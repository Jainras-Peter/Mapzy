<% layout('./layouts/boilerplate') %>
<style>
body {
    background-color: #f9f9fa;
    font-family: 'Arial', sans-serif;
    display: flex;
    justify-content: center;
    /* align-items: center; */
    min-height: 100vh;
    margin: 0;
}

.padding {
    padding: 1rem !important;
    width: 100%;
}

.user-card-full {
    overflow: hidden;
    border-radius: 8px;
    width: 110%;
}

.card {
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(69, 90, 100, 0.1);
    border: none;
    margin: 0 auto;
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}

.card:hover {
    transform: scale(1.03);
    box-shadow: 0 8px 24px rgba(69, 90, 100, 0.2);
}

.user-card-full .user-profile {
    border-radius: 8px 0 0 8px;
}

.bg-c-lite-green {
    background: linear-gradient(to right, #ee5a6f, #f29263);
}

.user-profile {
    padding: 20px 0;
}

.card-block {
    padding: 1.5rem;
}

.img-radius {
    border-radius: 50%;
}

h6 {
    font-size: 16px;
    font-weight: bold;
}

.card .card-block p {
    line-height: 25px;
    font-size: 14px;
    margin: 0;
}

.text-muted {
    color: #919aa3 !important;
}

.f-w-600 {
    font-weight: 600;
}

@media (max-width: 768px) {
    .user-card-full{
        flex-direction: column;
        border-radius: 8px;
        height: 100%;
    }

    .user-profile {
        border-radius: 8px 8px 0 0;
    }

    .card-block {
        padding: 1rem;
    }
}

</style>

<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img src="/images/user.png" class="img-radius" alt="User-Profile-Image" width="100" height="100">
                                </div>
                                <br>
                                <h6 class="f-w-600" style="color:black;"><%= user.username %></h6>
                                <% if(currentUser) { %>
                                  <% if(currentUser.username==user.username){ %>
                                <a href="/editprofile"><button class="btn btn-success">Edit</button></a>
                                 <% } %>
                                <% } %>
                                <i class="mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <div class="row">
                                    <!-- <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Date Joined</p>
                                        <% let date = new Date(user.dateJoined); %>
                                        <h6 class="text-muted f-w-400"><%= date.getDate() %>/<%= date.getMonth() + 1 %>/<%= date.getFullYear() %></h6>
                                    </div> -->
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Places Added</p>
                                        <h6 class="text-muted f-w-400"><%= campcount %></h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Reviews</p>
                                        <h6 class="text-muted f-w-400"><%= reviewcount %></h6>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>