<% layout('layouts/boilerplate')%>

<style>
  .feature-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: none;
    border-radius: 15px;
  }
  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  }
  .coming-soon-badge {
    background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
    color: white;
    padding: 8px 20px;
    border-radius: 25px;
    font-weight: bold;
    font-size: 0.9em;
    display: inline-block;
    margin-bottom: 20px;
    animation: pulse 2s infinite;
  }
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  .hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 60px 0;
    margin-bottom: 40px;
  }
  .feature-icon {
    font-size: 3rem;
    margin-bottom: 15px;
  }
  .notify-section {
    background: #f8f9fa;
    border-radius: 15px;
    padding: 30px;
    margin-top: 40px;
  }
  /* Horizontal timeline */
  .timeline {
    position: relative;
    padding: 30px 10px;
    display: flex;
    align-items: center;
    gap: 40px;
    overflow-x: auto;
    scrollbar-width: thin;
  }
  .timeline::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 4px;
    background: #e9ecef;
    transform: translateY(-50%);
  }
  .timeline-item {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 180px;
  }
  .timeline-dot {
    width: 14px;
    height: 14px;
    background: #0d6efd;
    border-radius: 50%;
    border: 3px solid #fff;
    box-shadow: 0 0 0 4px rgba(13,110,253,0.15);
    z-index: 1;
  }
  .timeline-label {
    margin-top: 8px;
    text-align: center;
    font-size: 0.9rem;
    font-weight: 500;
  }
  .timeline-time {
    color: #6c757d;
    font-size: 0.8rem;
  }
</style>

<div class="hero-section">
  <div class="container text-center">
    <h1 class="display-4 mb-3">üó∫Ô∏è Trip Planner</h1>
    <p class="lead">Plan your perfect journey with comprehensive travel solutions</p>
    <div class="coming-soon-badge">üöÄ Coming Soon</div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center mb-5">What You'll Be Able To Do</h2>
    </div>
  </div>

  <div class="row">
    <% features.forEach(feature => { %>
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card feature-card h-100 shadow-sm">
        <div class="card-body text-center p-4">
          <div class="feature-icon"><%= feature.icon %></div>
          <h5 class="card-title"><%= feature.title %></h5>
          <p class="card-text text-muted"><%= feature.description %></p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>

  <!-- Demo Planner -->
  <div class="row mt-5">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <h4 class="mb-3">Try a Demo Plan</h4>
          <p class="text-muted mb-4">This is a demo experience to preview how Trip Planner will work.</p>

          <!-- Step 1: Basic Inputs -->
          <div class="row g-3 align-items-end">
            <div class="col-md-3">
              <label for="tp-origin" class="form-label">Your Location</label>
              <input id="tp-origin" class="form-control" type="text" placeholder="e.g., Chennai" value="Chennai">
            </div>
            <div class="col-md-3">
              <label for="tp-destination" class="form-label">Destination</label>
              <input id="tp-destination" class="form-control" type="text" placeholder="e.g., Bengaluru" value="Madurai">
            </div>
            <div class="col-md-3">
              <label for="tp-start" class="form-label">Start Date & Time</label>
              <input id="tp-start" class="form-control" type="datetime-local">
            </div>
            <div class="col-md-3">
              <label for="tp-end" class="form-label">End Date & Time</label>
              <input id="tp-end" class="form-control" type="datetime-local">
            </div>
          </div>
          <div id="tp-errors" class="text-danger small mt-2" aria-live="polite"></div>

          <div class="d-flex flex-wrap gap-2 mt-3">
            <button id="tp-find-transport" class="btn btn-outline-primary">Find Transport</button>
            <button id="tp-find-hostels" class="btn btn-outline-secondary">Find Hostels</button>
            <button id="tp-find-return" class="btn btn-outline-info">Find Return Options</button>
          </div>

          <!-- Results Sections -->
          <div class="row mt-4">
            <div class="col-lg-4 mb-3">
              <h5 class="mb-2">Transport Options</h5>
              <div id="tp-transport-list" class="list-group small"></div>
            </div>
            <div class="col-lg-4 mb-3">
              <h5 class="mb-2">Hotel Options</h5>
              <div id="tp-hostel-list" class="list-group small"></div>
            </div>
            <div class="col-lg-4 mb-3">
              <h5 class="mb-2">Return Options</h5>
              <div id="tp-return-list" class="list-group small"></div>
            </div>
          </div>

          <!-- Plan Summary -->
          <hr>
          <div class="row">
            <div class="col-md-5">
              <h5 class="mb-3">Your Plan (Demo)</h5>
              <ul id="tp-cart" class="list-group small"></ul>
              <div class="d-flex justify-content-between align-items-center mt-2">
                <span class="text-muted">Total cost (estimate)</span>
                <strong id="tp-total">‚Çπ0</strong>
              </div>
            </div>
            <div class="col-md-7">
              <h5 class="mb-3">üß≠ Timeline Preview</h5>
              <div id="tp-timeline" class="timeline"></div>
              <div class="d-flex gap-2 mt-3">
                <button id="tp-build-timeline" class="btn btn-success">Build Timeline</button>
                <button id="tp-reset" class="btn btn-outline-danger">Delete</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // --- Mock data generators (client-side only) ---
    const addMinutes = (isoString, minutes) => {
      const t = new Date(isoString);
      t.setMinutes(t.getMinutes() + minutes);
      return t.toISOString().slice(0,16);
    };

    function mockTransport(destination, startIso) {
      const base = startIso || new Date().toISOString().slice(0,16);
      return [
        { id: 'bus-1', type: 'Bus', provider: 'TNSTC', depart: base, arrive: addMinutes(base, 240), price: 350 },
        { id: 'train-1', type: 'Train', provider: 'Indian Railways', depart: addMinutes(base, 60), arrive: addMinutes(base, 300), price: 280 },
        { id: 'flight-1', type: 'Flight', provider: 'IndiGo', depart: addMinutes(base, 90), arrive: addMinutes(base, 150), price: 3200 }
      ];
    }

    function mockHostels(destination, arriveIso) {
      return [
        { id: 'hostel-1', name: destination + ' Backpackers', rating: 4.3, price: 799, checkin: arriveIso, checkout: null },
        { id: 'hostel-2', name: 'City Center Inn', rating: 4.1, price: 999, checkin: arriveIso, checkout: null },
        { id: 'hostel-3', name: 'Comfort Stay', rating: 4.6, price: 1299, checkin: arriveIso, checkout: null }
      ];
    }

    function mockReturnOptions(destination, endIso) {
      const base = endIso || new Date().toISOString().slice(0,16);
      return [
        { id: 'bus-r1', type: 'Bus', provider: 'TNSTC', depart: addMinutes(base, -30), arrive: addMinutes(base, 180), price: 370 },
        { id: 'train-r1', type: 'Train', provider: 'Indian Railways', depart: addMinutes(base, -60), arrive: addMinutes(base, 150), price: 300 },
        { id: 'flight-r1', type: 'Flight', provider: 'IndiGo', depart: addMinutes(base, -90), arrive: addMinutes(base, 10), price: 3400 }
      ];
    }

    // --- DOM helpers ---
    const el = (sel) => document.querySelector(sel);
    const list = (parent, items, renderItem) => {
      parent.innerHTML = '';
      items.forEach((it) => parent.appendChild(renderItem(it)));
    };

    // --- State ---
    const state = {
      origin: 'Chennai',
      destination: 'Chennai',
      start: null,
      end: null,
      transport: [],
      hostels: [],
      returns: [],
      cart: { transport: null, hostel: null, ret: null }
    };

    // --- Renderers ---
    function transportItem(t) {
      const a = document.createElement('a');
      a.className = 'list-group-item list-group-item-action d-flex justify-content-between align-items-center';
      a.href = 'javascript:void(0)';
      a.innerHTML = `
        <div>
          <strong>${t.type}</strong> ¬∑ ${t.provider}<br>
          <small>${t.depart.replace('T',' ')} ‚Üí ${t.arrive.replace('T',' ')}</small>
        </div>
        <div class="text-end">
          <div>‚Çπ${t.price}</div>
          <button class="btn btn-sm btn-outline-primary mt-1">Add</button>
        </div>`;
      a.querySelector('button').onclick = () => {
        state.cart.transport = t;
        renderCart();
      };
      return a;
    }

    function hostelItem(h) {
      const a = document.createElement('a');
      a.className = 'list-group-item list-group-item-action d-flex justify-content-between align-items-center';
      a.href = 'javascript:void(0)';
      a.innerHTML = `
        <div>
          <strong>${h.name}</strong> ¬∑ ‚≠ê ${h.rating}<br>
          <small>Check-in around ${h.checkin ? h.checkin.replace('T',' ') : 'N/A'}</small>
        </div>
        <div class="text-end">
          <div>‚Çπ${h.price}/night</div>
          <button class="btn btn-sm btn-outline-secondary mt-1">Add</button>
        </div>`;
      a.querySelector('button').onclick = () => {
        state.cart.hostel = h;
        renderCart();
      };
      return a;
    }

    function returnItem(r) {
      const a = document.createElement('a');
      a.className = 'list-group-item list-group-item-action d-flex justify-content-between align-items-center';
      a.href = 'javascript:void(0)';
      a.innerHTML = `
        <div>
          <strong>${r.type}</strong> ¬∑ ${r.provider}<br>
          <small>${r.depart.replace('T',' ')} ‚Üí ${r.arrive.replace('T',' ')}</small>
        </div>
        <div class="text-end">
          <div>‚Çπ${r.price}</div>
          <button class="btn btn-sm btn-outline-info mt-1">Add</button>
        </div>`;
      a.querySelector('button').onclick = () => {
        state.cart.ret = r;
        renderCart();
      };
      return a;
    }

    function renderCart() {
      const ul = el('#tp-cart');
      ul.innerHTML = '';
      let total = 0;
      if (state.cart.transport) {
        const li = document.createElement('li');
        li.className = 'list-group-item d-flex justify-content-between align-items-center';
        li.textContent = `Go: ${state.cart.transport.type} ¬∑ ${state.cart.transport.provider}`;
        ul.appendChild(li);
        total += Number(state.cart.transport.price || 0);
      }
      if (state.cart.hostel) {
        const li = document.createElement('li');
        li.className = 'list-group-item d-flex justify-content-between align-items-center';
        li.textContent = `Stay: ${state.cart.hostel.name}`;
        ul.appendChild(li);
        total += Number(state.cart.hostel.price || 0);
      }
      if (state.cart.ret) {
        const li = document.createElement('li');
        li.className = 'list-group-item d-flex justify-content-between align-items-center';
        li.textContent = `Return: ${state.cart.ret.type} ¬∑ ${state.cart.ret.provider}`;
        ul.appendChild(li);
        total += Number(state.cart.ret.price || 0);
      }
      const totalEl = el('#tp-total');
      if (totalEl) totalEl.textContent = `‚Çπ${total}`;
    }

    function timelineNode(label, time) {
      const wrap = document.createElement('div');
      wrap.className = 'timeline-item';
      const dot = document.createElement('div');
      dot.className = 'timeline-dot';
      const lbl = document.createElement('div');
      lbl.className = 'timeline-label';
      lbl.textContent = label;
      const tm = document.createElement('div');
      tm.className = 'timeline-time';
      tm.textContent = time;
      wrap.appendChild(dot);
      wrap.appendChild(lbl);
      wrap.appendChild(tm);
      return wrap;
    }

    function buildTimeline() {
      const line = el('#tp-timeline');
      line.innerHTML = '';
      if (!state.cart.transport && !state.cart.hostel && !state.cart.ret) {
        line.appendChild(timelineNode('Add items to plan', ''));
        return;
      }
      if (state.cart.transport) {
        line.appendChild(timelineNode(
          `Start: ${state.cart.transport.type} ¬∑ ${state.cart.transport.provider}`,
          state.cart.transport.depart.replace('T',' ')
        ));
        line.appendChild(timelineNode(
          'Arrive',
          state.cart.transport.arrive.replace('T',' ')
        ));
      }
      if (state.cart.hostel) {
        line.appendChild(timelineNode(
          `Check-in ¬∑ ${state.cart.hostel.name}`,
          state.cart.hostel.checkin ? state.cart.hostel.checkin.replace('T',' ') : ''
        ));
      }
      if (state.cart.ret) {
        line.appendChild(timelineNode(
          `Return: ${state.cart.ret.type} ¬∑ ${state.cart.ret.provider}`,
          state.cart.ret.depart.replace('T',' ')
        ));
        line.appendChild(timelineNode(
          'Back Home',
          state.cart.ret.arrive.replace('T',' ')
        ));
      }
    }

    // --- Event wiring ---
    window.addEventListener('DOMContentLoaded', () => {
      const inputOrigin = el('#tp-origin');
      const inputDest = el('#tp-destination');
      const inputStart = el('#tp-start');
      const inputEnd = el('#tp-end');
      const errorBox = el('#tp-errors');
      const now = new Date();
      const isoNow = new Date(now.getTime() + 60*60*1000).toISOString().slice(0,16);
      const isoLater = new Date(now.getTime() + 48*60*60*1000).toISOString().slice(0,16);
      inputStart.value = isoNow;
      inputEnd.value = isoLater;

      function validateBasics() {
        errorBox.textContent = '';
        const origin = (inputOrigin.value || '').trim();
        const dest = (inputDest.value || '').trim();
        if (!origin || !dest) {
          errorBox.textContent = 'Please enter both your location and destination.';
          return false;
        }
        if (origin.toLowerCase() === dest.toLowerCase()) {
          errorBox.textContent = 'Your Location and Destination must be different.';
          return false;
        }
        const start = new Date(inputStart.value);
        const end = new Date(inputEnd.value);
        if (!(start instanceof Date) || isNaN(start.getTime()) || !(end instanceof Date) || isNaN(end.getTime())) {
          errorBox.textContent = 'Please select valid start and end date/time.';
          return false;
        }
        if (end.getTime() <= start.getTime()) {
          errorBox.textContent = 'End date/time must be after start date/time.';
          return false;
        }
        state.origin = origin;
        state.destination = dest;
        state.start = inputStart.value;
        state.end = inputEnd.value;
        return true;
      }

      inputOrigin.addEventListener('input', () => validateBasics());
      inputDest.addEventListener('input', () => validateBasics());
      inputStart.addEventListener('change', () => validateBasics());
      inputEnd.addEventListener('change', () => validateBasics());
      inputStart.addEventListener('change', (e) => state.start = e.target.value);
      inputEnd.addEventListener('change', (e) => state.end = e.target.value);

      el('#tp-find-transport').addEventListener('click', () => {
        if (!validateBasics()) return;
        const items = mockTransport(state.destination, inputStart.value);
        state.transport = items;
        list(el('#tp-transport-list'), items, transportItem);
      });
      el('#tp-find-hostels').addEventListener('click', () => {
        if (!validateBasics()) return;
        const arrive = (state.transport[0]?.arrive) || inputStart.value;
        const items = mockHostels(state.destination, arrive);
        state.hostels = items;
        list(el('#tp-hostel-list'), items, hostelItem);
      });
      el('#tp-find-return').addEventListener('click', () => {
        if (!validateBasics()) return;
        const items = mockReturnOptions(state.destination, inputEnd.value);
        state.returns = items;
        list(el('#tp-return-list'), items, returnItem);
      });
      el('#tp-build-timeline').addEventListener('click', () => { if (validateBasics()) buildTimeline(); });
      el('#tp-reset').addEventListener('click', () => {
        // Clear state
        state.transport = [];
        state.hostels = [];
        state.returns = [];
        state.cart = { transport: null, hostel: null, ret: null };
        // Clear UI
        el('#tp-transport-list').innerHTML = '';
        el('#tp-hostel-list').innerHTML = '';
        el('#tp-return-list').innerHTML = '';
        el('#tp-cart').innerHTML = '';
        el('#tp-total').textContent = '‚Çπ0';
        el('#tp-timeline').innerHTML = '';
        errorBox.textContent = '';
      });
    });
  </script>
  <div class="notify-section">
    <div class="row align-items-center">
        <small class="d-block text-muted mt-2">Feature coming soon</small>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12">
      <div class="card border-info">
        <div class="card-body text-center">
          <h5 class="card-title text-info"> Planned Features</h5>
          <div class="row">
            <div class="col-md-6">
              <ul class="list-unstyled text-start">
                <li> Multi-city trip planning</li>
                <li> Real-time transport schedules</li>
                <li> Hotel price comparison</li>
                <li> Weather integration</li>
              </ul>
            </div>
            <div class="col-md-6">
              <ul class="list-unstyled text-start">
                <li>Budget tracking</li>
                <li> Itinerary sharing</li>
                
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
